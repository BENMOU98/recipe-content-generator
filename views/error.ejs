<!-- Error page template -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Error - Recipe Content Generator</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Recipe Content Generator</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/recipes">Browse Recipes</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Generate Content
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="/generate/facebook">Facebook Content</a></li>
              <li><a class="dropdown-item" href="/generate/pinterest">Pinterest Content</a></li>
              <li><a class="dropdown-item" href="/generate/all">All Content Types</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/settings">Settings</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header bg-danger text-white">
            <h1 class="card-title">Error</h1>
          </div>
          <div class="card-body">
            <div class="text-center mb-4">
              <i class="fa fa-exclamation-triangle fa-5x text-warning"></i>
            </div>
            <h2 class="text-center mb-4"><%= message %></h2>
            
            <% if (error && error.status) { %>
              <div class="alert alert-secondary">
                <h4 class="alert-heading">Error Details</h4>
                <p>Status: <%= error.status %></p>
                <% if (error.stack && process.env.NODE_ENV === 'development') { %>
                  <hr>
                  <pre class="mb-0"><%= error.stack %></pre>
                <% } %>
              </div>
            <% } %>
            
            <div class="text-center mt-4">
              <a href="/" class="btn btn-primary me-2">Go to Home</a>
              <a href="javascript:history.back()" class="btn btn-outline-secondary">Go Back</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer class="bg-light text-center text-lg-start mt-5">
    <div class="container p-4">
      <p>Recipe Content Generator - Powered by OpenAI GPT models</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>